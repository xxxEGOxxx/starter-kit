<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" controllerName="stk.starterkit.controller.AddCustomer" displayBlock="true">
    <Page xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" id="AddCustomer"  
        showNavButton="true" navButtonPress="handleNavButtonPress" title="Add new customer">
        <headerContent>
            <Button type="Success" text="Create" press=".onCreate" />
        </headerContent>
        <VBox class="sapUiSmallMargin">
            <f:SimpleForm id="SimpleFormChange354"
                editable="true"
                layout="ResponsiveGridLayout"
                title="Create new customer"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
                 >
                <f:content>
                    <Label text="Customer ID" />
                    <Input id="CustomerID" />
                    <Label text="Customer Name" />
                    <Input id="CustomerName" />
                </f:content>
            </f:SimpleForm>
        </VBox>
    </Page>
</mvc:View>
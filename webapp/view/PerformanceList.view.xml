<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:f="sap.ui.layout.form" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" controllerName="stk.starterkit.controller.PerformanceList" displayBlock="true">
    <Page xmlns:cd="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" id="PerformanceList"  
        showNavButton="true" navButtonPress="handleNavButtonPress" title="Performance">
        <content>
            <Table id="customers" items="{/Customers}" class="blueText">
                <columns>
                    <Column id="col1">
                        
                        <Label id="label1" text="Name"/>
                        
                    </Column>
                    <Column id="col2">
                        <Label id="label2" text="Position"/>
                    </Column>
                    <Column id="col3">
                        <Label id="label3" text="Orders"/>
                    </Column>
                    <Column id="col4">
                        <Label id="label4" text="Actions"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem id="wwww">

                        <Text id="text1" text="{CompanyName}"/>
                        <Text id="text2" text="{Country}"/>
                        <Text id="text3" text="{CompanyName}"/>
                        <FlexBox justifyContent="Start" alignItems="Center">
                            <Button id="text4" class="sapUiSmallMarginEnd" text="Motivate" press="onMotivate"/>
                            <Button id="text5" text="Fire" press="onFire"/>
                        </FlexBox>
                        

                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </Page>
</mvc:View>